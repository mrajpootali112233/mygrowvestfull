# Database Configuration (SQLite for development)
DATABASE_TYPE=sqlite
DATABASE_NAME=./mygrowvest.db

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-for-testing-only
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=dev-super-secret-refresh-jwt-key-for-testing-only
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAIL=admin@mygrowvest.com
ADMIN_PASSWORD=AdminPassword123!

# Application
NODE_ENV=development
PORT=3000

# File Upload
FILES_BUCKET_URL=http://localhost:3000/uploads
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads

# CORS
FRONTEND_URL=http://localhost:3001