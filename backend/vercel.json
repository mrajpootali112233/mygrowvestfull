{
  \"version\": 2,
  \"name\": \"mygrowvest-backend\",
  \"builds\": [
    {
      \"src\": \"src/main.ts\",
      \"use\": \"@vercel/node\",
      \"config\": {
        \"includeFiles\": \"src/**\"
      }
    }
  ],
  \"routes\": [
    {
      \"src\": \"/(.*)\",
      \"dest\": \"/src/main.ts\"
    }
  ],
  \"env\": {
    \"NODE_ENV\": \"production\",
    \"DATABASE_URL\": \"@database_url\",
    \"JWT_SECRET\": \"@jwt_secret\",
    \"FRONTEND_URL\": \"@frontend_url\",
    \"PORT\": \"3000\"
  },
  \"functions\": {
    \"src/main.ts\": {
      \"maxDuration\": 30
    }
  }
}